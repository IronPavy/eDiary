<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    tools:context="com.example.sviostali.sk_dnevnik.Activities.SelectedSubject">

    <Button
        android:id="@+id/btnSS1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSSImePredmeta"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="368dp"
        android:background="#FFFF"
        android:text="@string/vasi_ucenicichangeinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSSImePredmeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Hrvatski jezik"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSS1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <Button
        android:id="@+id/btnSS2"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSSImePredmeta"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#FFFF"
        android:text="@string/odabir_ucenikachangeinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSS1"
        app:layout_constraintVertical_bias="0.536" />
</androidx.constraintlayout.widget.ConstraintLayout>
